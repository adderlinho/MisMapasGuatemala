<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/espacio_layout"
    tools:context="asoftwaresolution.mismapasguatemala.MainActivity">

    <ImageButton
        android:id="@+id/btnProceres"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/btnPricemart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp"
        android:onClick="irProceres"
        android:src="@drawable/ccproceres"
        android:scaleType="centerCrop" />


    <ImageButton
        android:id="@+id/btnPradera"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnProceres"
        android:onClick="irPradera"
        android:src="@drawable/ccpradera"
        android:scaleType="centerCrop" />


    <ImageButton
        android:id="@+id/btnPricemart"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="88dp"
        android:onClick="irPricesmart"
        android:src="@drawable/pricesmart"
        android:scaleType="centerCrop" />


    <ImageButton
        android:id="@+id/btnArkadia"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnPricemart"
        android:onClick="irArkadia"
        android:src="@drawable/ccarkadia"
        android:scaleType="centerCrop" />

</RelativeLayout>
